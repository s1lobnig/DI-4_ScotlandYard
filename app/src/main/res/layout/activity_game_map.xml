<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        tools:context=".map.GameMap" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/pedestrianTicket"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/ticket_yellow"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/colorText"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bicycleTicket"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/ticket_orange"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/colorText"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/busTicket"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/ticket_red"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/colorText"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/blackTicket"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/ticket_black"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/colorText"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>